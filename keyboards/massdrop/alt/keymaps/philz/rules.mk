WPM_ENABLE = yes
VELOCIKEY_ENABLE = yes # doesn't work with RGB MATRIX only RGB LIGHT :(
# enable mode where double tap of left shift makes all keys caps until a word break.
CAPS_WORD_ENABLE = yes

# RGB Options
